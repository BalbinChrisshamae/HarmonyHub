<%- include("header") %>


    <div class="container" style="margin-top: 7%; margin-bottom: 5%;">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-4">
                <div class="card mb-5">
                    <div class="card-body flex-column align-items-center">
                        <!-- <br> -->
                        <br>
                        <center>
                            <h4 style="color: black;"><b>LOGIN IN YOUR ACCOUNT</b></h4>
                        </center>
                        <% if(typeof(alert)!="undefined" ) {%>
                            <div class="alert alert-danger" role="alert" id="contactformalert">
                                <center>
                                    <%= alert %>
                                </center>
                            </div>
                            <%}%>
                                <br>
                                <div class="col-11 mx-auto">
                                    <form class="text-center" method="POST">

                                        <div class="mb-2" align="left" ;><label style="color: black"
                                                class="form-label">Email</label>&nbsp;

                                            <input class="form-control" name="email" id="email" value="maymay"
                                                placeholder="Enter email" required />
                                        </div>
                                        <div class="mb-2" align="left" ;><label style="color: black"
                                                class="form-label">Password</label>&nbsp;
                                            <input class="form-control" type="password" name="password" id="password"
                                                value="12345678" placeholder="Password" minlength="6" required />
                                        </div><br>
                                        <div class="col-6 mb-3 mx-auto"><input type="submit" name="submit"
                                                class="btn btn-primary d-block w-100" value="LOGIN"></div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    </body>

    </html>